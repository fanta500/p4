{
  "views": [
    {
      "id": "chart",
      "width": 640,
      "height": 420,
      "padding": {"left": 60, "right": 10, "top" : 10, "bottom": 60},
      "gridlines": {"y": true},
      "offset": [0, 0],
      "color": {
        "range": ["red", "steelblue"],
        "interpolate": false
      }
    }
  ],
  "operations": [
    {
      "$aggregate": {
        "$group": ["FatherAge"],
        "$collect": {
          "Babies": {"$count": "*"}
        }
      }
    },
    {
      "$visualize": {
        "mark": "area",
        "color": "steelblue",
        "size": 2,
        "x": "FatherAge",
        "y": "Babies"
      }
    }
  ]
}